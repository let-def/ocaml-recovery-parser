(library
 (public_name recovery_parser)
 (wrapped false)
 (libraries menhirLib))

(ocamllex raw_lexer)

(menhir
 (flags --strict --inspection --unused-tokens --table --cmly)
 (modules raw_parser))

(rule
 (with-stdout-to
  parser_recover.ml
  (run ../menhir-recover/main.exe %{dep:raw_parser.cmly})))
